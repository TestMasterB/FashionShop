<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shoptrue.pucharse.BuyNow">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cart_recyclerview"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/card_payment_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_text_background_shape"
        android:drawableStart="@drawable/baseline_credit_card_24"
        android:drawablePadding="5dp"
        android:text="Card Payment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cart_recyclerview" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cashOnDelivery_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_background_shape"
        android:drawableStart="@drawable/baseline_delivery_dining_24"
        android:drawablePadding="5dp"
        android:text="Cash on Delivery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_payment_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>